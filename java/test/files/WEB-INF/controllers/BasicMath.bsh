import ca.simplegames.micro.Globals;
import javax.script.ScriptEngineManager;
import javax.script.ScriptEngine;
import java.net.URLDecoder;

expression = URLDecoder.decode(context.get(Globals.PARAMS).get("exp")[0], Globals.UTF8);

// I know we're wasting resources, but it is for testing purposes
ScriptEngineManager manager = new ScriptEngineManager();
ScriptEngine engine = manager.getEngineByName("js");
context.with("result", engine.eval(expression));
print("Exp: "+expression+" = " + context.get("result"));
